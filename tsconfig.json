{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@tabs/*": ["src/app/(tabs)/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@store/*": ["src/store/*"],
      "@api/*": ["src/api/*"],
      "@customtypes/*": ["src/custom-types/*"]
    }
  }
}
